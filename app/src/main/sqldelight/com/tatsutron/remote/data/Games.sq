CREATE TABLE Games (
    core TEXT NOT NULL,
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    path TEXT NOT NULL UNIQUE,
    sha1 TEXT
);

save:
REPLACE INTO Games(core, path, sha1)
VALUES (:core, :path, :sha1);

selectAll:
SELECT * FROM Games;

selectByCore:
SELECT * FROM Games WHERE core = ?;

selectById:
SELECT * FROM Games WHERE id = ?;

deleteAll:
DELETE FROM Games;

deleteByCore:
DELETE FROM Games WHERE core = ?;
