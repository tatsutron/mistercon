CREATE TABLE Games (
    core TEXT NOT NULL,
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    path TEXT NOT NULL UNIQUE,
    sha1 TEXT
);

selectAll:
SELECT * FROM Games;

selectById:
SELECT * FROM Games WHERE id = ?;

save:
REPLACE INTO Games(core, path, sha1)
VALUES (:core, :path, :sha1);

clear:
DELETE FROM Games;
