<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_800">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="8dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_800"
            android:clickable="true"
            android:orientation="vertical">

            <com.tatsutron.remote.EditCard
                style="@style/Card"
                android:id="@+id/host"
                app:label="@string/host" />

            <com.tatsutron.remote.EditCard
                style="@style/Card"
                android:id="@+id/games_path"
                app:label="@string/games_path" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:id="@+id/menu_button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="8dp"
                android:textAllCaps="true"
                android:text="@string/menu"
                android:textColor="@color/primary_200"
                app:strokeColor="@color/primary_200" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:id="@+id/script_button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="8dp"
                android:textAllCaps="true"
                android:text="@string/script"
                android:textColor="@color/primary_200"
                app:strokeColor="@color/primary_200" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:id="@+id/reboot_button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="8dp"
                android:textAllCaps="true"
                android:text="@string/reboot"
                android:textColor="@color/primary_200"
                app:strokeColor="@color/primary_200" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
