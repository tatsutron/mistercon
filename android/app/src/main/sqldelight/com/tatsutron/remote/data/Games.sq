CREATE TABLE Games (
    core TEXT NOT NULL,
    path TEXT NOT NULL UNIQUE PRIMARY KEY,
    sha1 TEXT
);

save:
REPLACE INTO Games(core, path, sha1)
VALUES (:core, :path, :sha1);

selectAll:
SELECT * FROM Games;

selectByCore:
SELECT * FROM Games WHERE core = ?;

selectByPath:
SELECT * FROM Games WHERE path = ?;

selectBySha1:
SELECT * FROM Games WHERE sha1 = ?;

deleteAll:
DELETE FROM Games;

deleteByCore:
DELETE FROM Games WHERE core = ?;
