<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical"
    android:background="@color/gray_900"
    android:orientation="vertical"
    android:padding="@dimen/margin_large"
    android:showDividers="middle"
    android:divider="@drawable/vertical_divider_small">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/mistercon"
        android:textSize="@dimen/text_size_largest"
        android:textColor="@color/primary_200" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/primary_200" />

    <LinearLayout
        android:id="@+id/credits_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="@dimen/margin_large"
        android:orientation="vertical" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/primary_200" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:paddingHorizontal="@dimen/margin_large"
        android:paddingTop="@dimen/margin_small"
        android:text="@string/thank_you"
        android:textSize="@dimen/text_size_smallest"
        android:textColor="@color/white" />

</LinearLayout>
