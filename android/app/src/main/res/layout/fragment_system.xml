<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/Toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_weight="1"
        android:padding="@dimen/margin_small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:divider="@drawable/vertical_divider_medium"
            android:focusable="true"
            android:orientation="vertical"
            android:showDividers="middle">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/ip_button"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/set_ip_address"
                android:textColor="@color/button_background"
                app:strokeColor="@color/button_background" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/menu_button"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/toggle_menu"
                android:textColor="@color/button_background"
                app:strokeColor="@color/button_background" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/credits_button"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/credits"
                android:textColor="@color/button_background"
                app:strokeColor="@color/button_background" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
